<?
	local request, user = luawa.request, luawa.user
?>

<form action="" method="get" class="inline search">
	<input type="text" name="q" value="type to search..." onfocus="if( this.value == 'type to search...' ) { this.value = ''; }" onblur="if( this.value == '' ) { this.value = 'type to search...'; }" />
	<button type="submit">&#187;</button>
</form>

<form action="" method="get" class="inline">
	<select name="type">
		<option value="">Filter by type</option>
		<option value="ipv4"<? if request.get.type == 'ipv4' then ?> selected<? end ?>>IPv4</option>
		<option value="ipv6"<? if request.get.type == 'ipv6' then ?> selected<? end ?>>IPv6</option>
		<option value="">All</option>
	</select>

	<input type="submit" class="submit" value="Update &#187;" />

	<span class="right admin">
		<? if user:checkPermission( 'ViewAnyIpblock' ) then ?>
			<? if request.get.action ~= 'all' then ?>
				<a href="/network/ipblocks/all" class="button admin">All IP Blocks</a>
			<? else ?>
				<a href="/network/ipblocks" class="button">My IP Blocks</a>
			<? end ?>
		<? end ?>
		<? if user:checkPermission( 'AddIpblock' ) then ?><a href="/network/ipblocks/add" class="button admin">Add IP Block</a><? end ?>
	</span>
</form>

<table cellspacing="0" cellpadding="0">
	<thead><tr>
		<th>ID</th>
		<? if request.get.action == 'all' then ?><th>Owners</th><? end ?>
		<th>Name</th>
		<th>Type</th>
		<th>Subnet</th>
		<th width="150px">Linked</th>
		<th width="180px">Actions</th>
	</tr></thead>

	<tbody>
	<? for k, ipblock in pairs( self:get( 'ipblocks' ) ) do ?>
	<tr>
		<td><?=ipblock.id ?></td>

		<? if request.get.action == 'all' then ?><td>
			<? if ipblock.user_id > 0 then ?><a class="button admin" href="/admin/users?id=<?=ipblock.user_id ?>">User</a><? end ?>
			<? if ipblock.group_id > 0 then ?><a class="button admin" href="/admin/groups?id=<?=ipblock.group_id ?>">Group</a><? end ?>
		</td><? end ?>

		<td><?=ipblock.name ?></td>
		<td><?=ipblock.type ?></td>
		<td><?=ipblock.subnet ?></td>

		<td>
			<? if ipblock.device_id > 0 then ?><a href="/device/<?=ipblock.device_id ?>" class="button lightblue pop" data-object-type="device" data-object-id="<?=ipblock.device_id ?>">Device</a><? end ?>
			<? if ipblock.device_group_id > 0 then ?><a href="/group/<?=ipblock.device_group_id ?>" class="button lightblue pop" data-object-type="group" data-object-id="<?=ipblock.device_group_id ?>">Group</a><? end ?>
		</td>

		<td>
			<a href="/ipblock/<?=ipblock.id ?>" class="button green">View</a>
			<? if ipblock.permissions.edit then ?><a href="/ipblock/<?=ipblock.id ?>/edit" class="button black">Edit</a><? end ?>
			<? if ipblock.permissions.delete then ?>
				<form class="inline" data-confirm-message="Are you sure you wish to delete this IP block?" action="/ipblock/<?=ipblock.id ?>/delete" method="post">
					<input type="hidden" name="token" value="<?=self:get( 'token' ) ?>" />
					<button class="admin red">Delete</button>
				</form>
			<? end ?>
		</td>
	</tr>
	<? end if #self:get( 'ipblocks' ) == 0 then ?>
		<tr>
			<td colspan="6">No IP blocks found</td>
		</tr>
	<? end ?>
	</tbody>
</table>