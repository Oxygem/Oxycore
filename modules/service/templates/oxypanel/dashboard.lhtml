				<td><?=service.id ?></td>
				<td><?=service.name ?></td>
				<td><?=service.type ?></td>
				<td><a class="button" href="/ipblock/<?=service.id ?>">View</a></td>
			</tr>
			<? end else ?>
				<tr><td colspan="4">You have no services</td></tr>
			<? end ?>
		</table>
	</div>

	<div class="item half two">
		<h3>Your Groups <span class="right"><a href="/service/groups">View Owned</a><? if user:cookiePermission( 'ViewAnyGroup' ) then ?> &bull; <a class="red" href="/service/groups/all">View All</a><? end ?></span></h3>
		<table cellborder="0" cellspacing="0" cellpadding="0" width="100%">
